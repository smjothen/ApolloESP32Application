{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
        "label": "IDF Shell",
        "type": "shell",
        "command": "bash -c '. $HOME/.local/esp_v4_2/esp-idf/export.sh && bash'",
        "presentation": {"focus": true}
      },
      {
        "label": "menuconfig",
        "type": "shell",
        "command": "bash -c '. $HOME/.local/esp_v4_2/esp-idf/export.sh && idf.py menuconfig'",
        "presentation": {"focus": true}
      },
      {
        "label": "Build",
        "group": "build",
        "type": "shell",
        "command": "bash -c '. $HOME/.local/esp_v4_2/esp-idf/export.sh && idf.py build'",
        "windows": {
          "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py build"
        },
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": ["relative", "${workspaceFolder}/build"],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      },
      {
        "label": "Get size",
        "group": "build",
        "type": "shell",
        "command": "bash -c '. $HOME/.local/esp_v4_2/esp-idf/export.sh && idf.py size'",
        "windows": {
          "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py size"
        },
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": ["relative", "${workspaceFolder}/build"],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      },
      {
        "label": "Clean",
        "group": "build",
        "type": "shell",
        "command": "bash -c '. $HOME/.local/esp_v4_2/esp-idf/export.sh && idf.py clean'",
        "windows": { "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py clean" }
      },
      {
        "label": "Clean (full)",
        "group": "build",
        "type": "shell",
        "command": "bash -c '. $HOME/.local/esp_v4_2/esp-idf/export.sh && idf.py fullclean'",
        "windows": { "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py fullclean" }
      },
      {
        "label": "Flash",
        "group": "test",
        "type": "shell",
        "command": "bash -c '. $HOME/.local/esp_v4_2/esp-idf/export.sh && idf.py flash -p /dev/ttyUSB2'",
        "windows": { "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py flash" },
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": ["relative", "${workspaceFolder}/build"],
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      },
      {
        "label": "Erase flash",
        "group": "build",
        "type": "shell",
        "command": "bash -c '. $HOME/.local/esp_v4_2/esp-idf/export.sh && idf.py erase_flash -p /dev/ttyUSB2'",
        "windows": { "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py erase_flash" }
      },
      {
        "label": "Monitor",
        "group": "test",
        "type": "shell",
        "command": "bash -c '. $HOME/.local/esp_v4_2/esp-idf/export.sh && idf.py monitor -p /dev/ttyUSB0'",
        "windows": { "command": "%userprofile%\\esp\\esp-idf\\export.bat && idf.py monitor" },
        "isBackground": true,
        //"dependsOn": ["Flash"]
      },
      {
        "label": "OpenOCD",
        "type": "shell",
      "command": "bash -c '. $HOME/.local/esp_v4_2/esp-idf/export.sh && openocd -f interface/ftdi/esp32_devkitj_v1.cfg -f board/esp-wroom-32.cfg'",
        "windows": { "command": "%userprofile%\\esp\\esp-idf\\export.bat && openocd -f interface/ftdi/esp32_devkitj_v1.cfg -f board/esp32-wrover.cfg" },
        "isBackground": true,
        "problemMatcher": {
          "pattern": {
            "regexp": "^(Info |Warn ):(.*)$", // Ignore errors
            "severity": 1,
            "message": 2
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "Info : Listening on port \\d+ for gdb connections"
          }
        }
      }
    ]
  }